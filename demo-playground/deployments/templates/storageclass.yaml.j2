kind: StorageClass
apiVersion: storage.k8s.io/v1
metadata:
  name: mayastor-{{ protocol }}
parameters:
  # Set the number of data replicas ("replication factor")
  repl: '{{ replicas }}'
  # Set the export transport protocol
  protocol: '{{ protocol }}'
  # Ensure that Mayastor will create the volume's
  # nexus on the same node as the consuming pod
  local: '{{ colocated_nexus_enabled }}'
provisioner: io.openebs.csi-mayastor
